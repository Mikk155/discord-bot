{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties":
    {
        "$schema":
        {
            "type": "string"
        },
        "token":
        {
            "type": "string",
            "description": "The Discord application BOT Token"
        },
        "token dev":
        {
            "type": "string",
            "description": "The Discord application BOT Token for using -dev argument"
        },
        "server_id":
        {
            "type": "integer",
            "description": "The ID of your main server"
        },
        "log_id":
        {
            "type": "integer",
            "description": "The Channel ID of your main server for output debugging messages"
        },
        "owner_id":
        {
            "type": "integer",
            "description": "The owner ID. This user will have total authority over the bot code"
        },
        "github_id":
        {
            "type": "integer",
            "description": "Github webhook channel ID, This is only required if you'd do use of github's workflows"
        },
        "plugins":
        {
            "type": "array",
            "items":
            {
                "type": "object",
                "properties":
                {
                    "Disable":
                    {
                        "type": "boolean",
                        "description": "If true, the plugin is not registered."
                    },
                    "script":
                    {
                        "type": "string",
                        "description": "Script directory starting from (workspace)/plugins/"
                    }
                },
                "required":
                [
                    "script"
                ],
                "additionalProperties": false
            }
        },
        "additionalProperties": false
    },
    "additionalProperties": false,
    "required":
    [
        "token",
        "plugins",
        "$schema"
    ]
}
