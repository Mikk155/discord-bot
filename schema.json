{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties":
    {
        "$schema":
        {
            "type": "string"
        },
        "server_id":
        {
            "type": "integer",
            "description": "The ID of your main server"
        },
        "log_id":
        {
            "type": "integer",
            "description": "The Channel ID of your main server for output debugging messages"
        },
        "owner_id":
        {
            "type": "integer",
            "description": "The owner ID. This user will have total authority over the bot code"
        },
        "github_id":
        {
            "type": "integer",
            "description": "Github webhook channel ID, This is only required if you'd do use of github's workflows"
        },
        "loggers":
        {
            "type": "array",
            "items":
            {
                "type": "string",
                "enum":
                [
                    "warning",
                    "debug",
                    "info"
                ],
                "uniqueItems": true
            },
            "additionalProperties": false,
            "description": "Logging system, Loggers to display, note \"critical\" and \"error\" will be always shown"
        },
        "plugins":
        {
            "type": "array",
            "items":
            {
                "type": "object",
                "properties":
                {
                    "Disable":
                    {
                        "type": "boolean",
                        "description": "If true, the plugin is not registered."
                    },
                    "script":
                    {
                        "type": "string",
                        "description": "Script directory starting from (workspace)/plugins/"
                    },
                    "servers":
                    {
                        "type": "array",
                        "items":
                        {
                            "type": "integer"
                        },
                        "uniqueItems": true,
                        "additionalProperties": true,
                        "description": "ID of servers that this plugin will work only, leave empty for not limiting to any"
                    }
                },
                "required":
                [
                    "script"
                ],
                "additionalProperties": false
            }
        },
        "additionalProperties": false
    },
    "additionalProperties": false,
    "required":
    [
        "plugins",
        "$schema"
    ]
}
